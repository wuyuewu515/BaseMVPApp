<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    android:orientation="vertical">

    <gzfns.com.inventoryregulation.views.TitleBar
        android:id="@+id/presonal_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleMiddle="个人中心" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_400"
        android:background="@mipmap/personal_bg">

        <ImageView
            android:id="@+id/iv_photo_personal"
            android:layout_width="@dimen/qb_px_160"
            android:layout_height="@dimen/qb_px_160"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/qb_px_70" />

        <TextView
            android:id="@+id/tv_userName_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_photo_personal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/qb_px_37"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/fontSize_16"
            tools:text="周杰伦" />

        <TextView
            android:id="@+id/tv_countName_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_userName_personal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/qb_px_10"
            android:gravity="center"
            android:textColor="@color/white_99ff"
            android:textSize="@dimen/fontSize_13"
            tools:text="[江湾商业中心]" />

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/card_about_personal"
        style="@style/personal_cardView"
        android:layout_marginTop="@dimen/qb_px_20"
        app:cardCornerRadius="@dimen/qb_px_8"
        app:cardElevation="@dimen/qb_px_6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/qb_px_30"
                android:layout_height="@dimen/qb_px_30"
                android:layout_marginLeft="@dimen/qb_px_20"
                android:src="@mipmap/icon_aboutus" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qb_px_20"
                android:layout_weight="1"
                android:text="关于我们"
                android:textColor="@color/text_black"
                android:textSize="@dimen/fontSize_13" />

            <ImageView
                android:layout_width="@dimen/qb_px_30"
                android:layout_height="@dimen/qb_px_30"
                android:layout_marginLeft="@dimen/qb_px_20"
                android:layout_marginRight="@dimen/qb_px_20"
                android:src="@mipmap/icon_right_arrow" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_clear_personal"
        style="@style/personal_cardView"
        android:layout_marginTop="@dimen/qb_px_10"
        app:cardCornerRadius="@dimen/qb_px_8"
        app:cardElevation="@dimen/qb_px_6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/qb_px_30"
                android:layout_height="@dimen/qb_px_30"
                android:layout_marginLeft="@dimen/qb_px_20"
                android:src="@mipmap/icon_clear" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qb_px_20"
                android:layout_weight="1"
                android:text="清除缓存"
                android:textColor="@color/text_black"
                android:textSize="@dimen/fontSize_13" />

            <TextView
                android:id="@+id/tv_cache_personal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qb_px_20"
                android:layout_marginRight="@dimen/qb_px_20"
                android:textColor="@color/text_black"
                android:textSize="@dimen/fontSize_13"
                tools:text="25.5M" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_loginout_personal"
        style="@style/personal_cardView"
        android:layout_marginTop="@dimen/qb_px_10"
        app:cardCornerRadius="@dimen/qb_px_8"
        app:cardElevation="@dimen/qb_px_6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/qb_px_30"
                android:layout_height="@dimen/qb_px_30"
                android:layout_marginLeft="@dimen/qb_px_20"
                android:src="@mipmap/icon_loginout" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qb_px_20"
                android:layout_weight="1"
                android:text="退出登录"
                android:textColor="@color/text_black"
                android:textSize="@dimen/fontSize_13" />

            <ImageView
                android:layout_width="@dimen/qb_px_30"
                android:layout_height="@dimen/qb_px_30"
                android:layout_marginLeft="@dimen/qb_px_20"
                android:layout_marginRight="@dimen/qb_px_20"
                android:src="@mipmap/icon_right_arrow" />


        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
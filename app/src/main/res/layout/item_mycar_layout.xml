<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/qb_px_140"
    android:layout_margin="@dimen/qb_px_20"
    android:layout_marginBottom="@dimen/qb_px_10"
    android:layout_marginTop="@dimen/qb_px_10"
    android:background="@color/white"
    android:elevation="@dimen/qb_px_6"
    app:cardCornerRadius="@dimen/qb_px_8"
    app:contentPadding="0dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_carstatus_item"
            android:layout_width="@dimen/qb_px_60"
            android:layout_height="match_parent"
            android:src="@mipmap/zaiku" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/qb_px_30"
            android:layout_marginTop="@dimen/qb_px_30"
            android:layout_toRightOf="@+id/iv_carstatus_item"
            android:gravity="right"
            android:minWidth="@dimen/qb_px_100"
            android:text="车架号:"
            android:textColor="@color/text_black"
            android:textSize="@dimen/fontSize_14"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView"
            android:layout_marginBottom="@dimen/qb_px_30"
            android:gravity="right"
            android:minWidth="@dimen/qb_px_100"
            android:text="车号:"
            android:textColor="@color/text_black"
            android:textSize="@dimen/fontSize_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_carCode_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/textView"
            android:layout_marginBottom="@dimen/qb_px_30"
            android:layout_marginLeft="@dimen/qb_px_110"
            android:layout_marginTop="@dimen/qb_px_30"
            android:minWidth="@dimen/qb_px_100"
            android:singleLine="true"
            android:textColor="@color/text_black"
            android:textSize="@dimen/fontSize_14"
            tools:text="123456789" />

        <TextView
            android:id="@+id/tv_carNum_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView"
            android:layout_marginBottom="@dimen/qb_px_30"
            android:layout_marginLeft="@dimen/qb_px_110"
            android:layout_marginTop="@dimen/qb_px_30"
            android:minWidth="@dimen/qb_px_100"
            android:textColor="@color/text_black"
            android:textSize="@dimen/fontSize_14"
            tools:text="987654321" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
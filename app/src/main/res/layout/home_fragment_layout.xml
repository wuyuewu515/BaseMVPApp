<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main">

    <gzfns.com.inventoryregulation.views.TitleBar
        android:id="@+id/home_titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleMiddle="停车场1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/home_titleBar"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/card_ruKu_home"
                style="@style/home_cardView"
                android:layout_marginTop="@dimen/qb_px_20"
                app:cardCornerRadius="@dimen/qb_px_20"
                app:cardElevation="@dimen/qb_px_6">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/qb_px_240"
                        android:layout_height="@dimen/qb_px_150"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/qb_px_60"
                        android:src="@mipmap/ruku" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/qb_px_90"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="入库"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/fontSize_17"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Store"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/fontSize_9" />

                    </LinearLayout>


                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/card_chuKu_home"
                style="@style/home_cardView"
                app:cardCornerRadius="@dimen/qb_px_20"
                app:cardElevation="@dimen/qb_px_6">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/qb_px_240"
                        android:layout_height="@dimen/qb_px_150"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/qb_px_60"
                        android:src="@mipmap/chuku" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/qb_px_90"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="出库"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/fontSize_17"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deliver"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/fontSize_9" />

                    </LinearLayout>


                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_qingDian_home"
                style="@style/home_cardView"
                app:cardCornerRadius="@dimen/qb_px_20"
                app:cardElevation="@dimen/qb_px_6">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/qb_px_240"
                        android:layout_height="@dimen/qb_px_150"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/qb_px_60"
                        android:src="@mipmap/qingdian" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/qb_px_90"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="清点"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/fontSize_17"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Check"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/fontSize_9" />

                    </LinearLayout>


                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_tiHuan_home"
                style="@style/home_cardView"
                app:cardCornerRadius="@dimen/qb_px_20"
                app:cardElevation="@dimen/qb_px_6">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/qb_px_240"
                        android:layout_height="@dimen/qb_px_150"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/qb_px_60"
                        android:src="@mipmap/tihuan" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/qb_px_90"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="替换"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/fontSize_17"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Replace"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/fontSize_9" />

                    </LinearLayout>


                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>


    </ScrollView>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/shape_white_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qb_px_50"
        android:layout_marginRight="@dimen/qb_px_50"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/text_black"
        android:textSize="17sp"
        android:textStyle="bold"
        Tools:text="这个是标题" />


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qb_px_50"
        android:layout_marginRight="@dimen/qb_px_50"
        android:layout_marginTop="20dp"
        android:minHeight="@dimen/qb_px_130"
        android:gravity="center"
        android:textColor="@color/text_black"
        android:textSize="15sp"
        Tools:text="这个是内容" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_2"
        android:layout_marginTop="15dp"
        android:background="@color/ededed" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_80"
        android:layout_marginLeft="@dimen/qb_px_50"
        android:layout_marginRight="@dimen/qb_px_50"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/text_gray"
            android:textSize="16sp" />


        <View
            android:layout_width="@dimen/qb_px_2"
            android:layout_height="match_parent"
            android:background="@color/ededed" />

        <TextView
            android:id="@+id/confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/qb_px_10"
            android:layout_marginRight="@dimen/qb_px_10"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/text_blue"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_88"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:background="@color/bg_titlbar">


        <android.support.v7.widget.SearchView
            android:id="@+id/search_car"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/qb_px_14"
            android:layout_marginLeft="@dimen/qb_px_48"
            android:layout_marginRight="@dimen/qb_px_100"
            android:layout_marginTop="@dimen/qb_px_14"
            android:background="@drawable/shape_white_bg"
            app:iconifiedByDefault="false"
            app:queryHint="请输入车架号" />

        <ImageView
            android:layout_width="@dimen/qb_px_60"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/qb_px_14"
            android:layout_marginLeft="@dimen/qb_px_20"
            android:layout_marginRight="@dimen/qb_px_20"
            android:layout_marginTop="@dimen/qb_px_14"
            android:background="@drawable/shape_white_bg"
            android:padding="6dp"
            android:src="@mipmap/sousuo" />


        <TextView
            android:id="@+id/tv_cancal_car"
            android:layout_width="@dimen/qb_px_100"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="@dimen/fontSize_14" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_car"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
